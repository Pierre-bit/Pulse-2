<form method="post" action="{{ path('artiste_delete', {'id': artiste.id}) }}" onsubmit="return confirm('êtes-vous sûrs de vouloir supprimer cet artiste ? Cela supprimera également ses albums et ses singles !');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artiste.id) }}">
	<button class="site-btn">Supprimer</button>
</form>
