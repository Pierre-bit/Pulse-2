{% extends 'base.html.twig' %}

{% block title %}Liste Artistes
{% endblock %}

{% block body %}
	{% if app.session.flashBag.has('Delete') %}
		<div class="alert alert-danger">
			{% for msg in app.session.flashBag.get('Delete') %}
				{{ msg }}
			{% endfor %}
		</div>
	{% endif %}

	<!--  section -->
	<section class="page-info-section set-bg" data-setbg="/img/page-info-bg.jpg">
		<div class="container">
			<div class="section-title text-center">
				<h2>Artistes</h2>
			</div>
		</div>
	</section>
	<!--  section end -->

	<div id="autocomplete"  >
		<div class="container" >
			{{ form_start(form, { 'attr': {'autocomplete': 'off'} })  }}
			{{ form_end(form)}}
		</div>
	</div>
	<script src="{{ asset('build/js/autocomplete.js') }}" type="text/javascript"></script>

<div class="container">
	<div class="row ">
			{% for artiste in artiste %}
				<div class="col-md-4">
					<div class="flip-card" id="card">
						<div class="flip-card-inner">
							<div class="flip-card-front">
								{% if artiste.filename %}
									<img src="{{vich_uploader_asset(artiste, 'imageFile') }}" alt="card-img-top" style="width: 100%; height:100%; border-radius: 10px;">
								{% else %}
									<img src="/image/artiste/empty.jpg" alt="card-img-top" style="width: 100%; height:400px;border-radius: 10px;">
								{% endif %}
							</div>
							<div class="flip-card-back"></br>
									<h2>
										{# var|title permet de mettre la premiere lettre d'un mot en majuscules #}
										{{ artiste.nomArtiste|title }}
									</h2>
								</br>
							</br>
							<p>
								{{ artiste.biographie|length > 200 ? artiste.biographie|slice(0, 200) ~ '...' : artiste.biographie }}
							</p>
								<ul class="social-footer2">
									{% if artiste.youtube != NULL %}
										<li style="visible">
											<a title="youtube" target="_blank" href="{{ artiste.youtube }}"> <img src="/img/yt_icon_rgb.png"></a>
										</li>
										{% else %}
									{% endif %}
									{% if artiste.facebook != NULL %}
										<li style="visible">
											<a href="{{ artiste.facebook }}" target="_blank" title="Facebook"><img src="/img/f_logo_RGB-Blue_58.png"></a>
										</li>
										{% else %}
									{% endif %}
									{% if artiste.twitter != NULL %}
										<li style="visible">
											<a href="{{ artiste.twitter }}" target="_blank" title="Twitter"><img src="/img/Twitter_Logo_Blue.png"></a>
										</li>
										{% else %}
									{% endif %}
									{% if artiste.instagram != NULL %}
										<li style="visible">
											<a title="instagram" target="_blank" href="{{ artiste.instagram }}"><img alt="instagram" width="30" height="30" src="data:image/png;base64,"></a>
										</li>
										{% else %}
									{% endif %}
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Aucun Artiste trouv√©

			{% endfor %}
	</div>
</div>

<div class="navigation">
	<div class="col-md-2">
		{{ knp_pagination_render(artiste) }}
	</div>
</div>
{% if is_granted('ROLE_ADMIN') %}
	<a href="{{ path('artiste_new') }}">Ajouter un artiste</a>
{% endif %}</div>{% endblock %}
