<form method="post" action="{{ path('carousel_delete', {'id': carousel.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette image ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
    <button class="site-btn">Supprimer</button>
</form>
