{% extends 'base.html.twig' %}

{% block title %}Carousel{% endblock %}


{% block body %}
  
<!--  section -->
<section class="page-info-section set-bg" data-setbg="/img/page-info-bg.jpg">
	<div class="container">
		<div class="section-title text-center">
			<h2>Carousel</h2>
		</div>
	</div>
</section>
<!--  section end -->
    <table class="table">
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>
                    {% if carousel.filename %}
                            <img class="card-img-top" src="{{vich_uploader_asset(carousel, 'imageFile') }}" alt="card-img-top" style="width: 600px; height:400 px; border-radius: 10px;">     
                    {% else %}
                            <img class="card-img-top" src="/image/artiste/empty.jpg" alt="card-img-top" style="width: 100%; height:500px;">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('carousel_edit', {'id': carousel.id}) }}" class="site-btn">Mettre à jour</a>
                    </br></br>
                    {{ include('carousel/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Pas d'image enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('carousel_new') }}">Ajouter une Image</a>
{% endblock %}
