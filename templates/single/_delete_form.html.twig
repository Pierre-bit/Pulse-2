<form method="post" action="{{ path('single_delete', {'id': single.id}) }}" onsubmit="return confirm('êtes-vous sûrs de vouloir supprimer ce single ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ single.id) }}">
    <button class="site-btn">Supprimer</button>
</form>
