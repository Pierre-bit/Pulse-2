{{ form_start(form) }}
<div class="contact-form">

	<div class="row">
		<div class="col-lg-4 offset-2">
			{{ form_row(form.email) }}
		</div>
		<div class="col-lg-4">
			{{ form_row(form.nom) }}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-2">
			{{ form_row(form.prenom) }}
		</div>
		<div class="col-lg-4">
			{{ form_row(form.telephone) }}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 offset-4">
			{{ form_row(form.Login) }}
		</div>
	</div>
    <button class="site-btn">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
